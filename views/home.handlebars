<div id='home_container'>
    <table style='width: 100%;'>
        <tr style='border: none;'>
            <td style='width: 65%;'>
                <!-- Challenge Widget -->
                <div class='widget'>
                    <div style='display: table-cell;padding-left: 5rem;'>
                        <h1>Current Challenge</h1>
                        {{#with currentChallenge}}
                            <h2>{{title}}</h2>
                            <p>{{description}}</p>
                            <p>The base reward for this challenge is
                                {{reward}}
                                points. (more points can be earned through
                                ranking high on the leaderboard)</p>
                        {{/with}}
                    </div>
                    <div style='display: table;'>
                        <!-- Leaderboard -->
                        <div style='display: table-cell;'>
                            {{#each currentChallenge.leaderboard}}
                                <div
                                    class='favoriteWorkoutElement center'
                                    style='width: 100%;'
                                >
                                    <h3>{{@Index}}</h3><span
                                        style='display: table-cell;'
                                    >{{userName}}
                                        <span>{{dateTo24HRFormat time}}</span>
                                        <br />
                                    </span>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <!-- 5 Favorite Workout Widget -->
                <div class='widget' style='text-align: center;'>
                    <h2>Quick Access to Some of Your Workouts</h2>
                    {{#each userData.workouts}}
                        <div class='favoriteWorkoutElement center'>
                            <span style='display: table-cell;'><h3
                                    style='display: inline-block;'
                                >Name: {{name}}</h3>
                                <span>Workout Type: {{type}}</span>
                                <span>Notes: {{notes}}</span>
                            </span>
                            <div style='display: table-cell;text-align: right;'>
                                <button
                                    class='about_button'
                                    style='font-size: 16px;white-space: pre-wrap;'
                                    onclick='location.href={{workoutURL}}'
                                >Run Again</button>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </td>
        </tr>
    </table>
